function init() {

	// Define various event handlers for Dialog
	var handleSubmit = function() {
		//clear error text
		var els = YAHOO.util.Dom.getElementsByClassName('errorText');
		if ( els.length )
			YAHOO.util.Dom.setStyle(els, 'display', 'none');
		this.submit();
